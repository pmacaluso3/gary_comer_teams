<% if @yours %>
	<h4>
		Students on your team:
	</h4>
<% else %>
	<h4>
		Students on <%= @user.name %>'s team:
	</h4>
<% end %>



<% if !@students.empty? %>
	<table>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Student ID</th>
			<th>Grade Level</th>
			<th>Gender</th>
			<th>Detention Count</th>
			<th>GPA</th>
		</tr>
		<% @students.each do |student| %>
			<tr>
				<td><%= link_to student.first, student_path(student) %></td>
				<td><%= student.last %></td>
				<td><%= student.student_id %></td>
				<td><%= student.grade_level %></td>
				<td><%= student.gender %></td>
				<td><%= student.detention_count %></td>
				<td><%= student.gpa %></td>
			</tr>
		<% end %>
	</table>
	<p>
		<strong>Average GPA:</strong> <%= @avg_gpa %><br>
		<strong>Total detentions:</strong> <%= @total_detentions %><br>
		<strong>Average detentions per student:</strong> <%= @avg_detentions %><br>
		<strong>Percent male:</strong> <%= @percent_male %><br>
		<strong>Percent female:</strong> <%= @percent_female %><br>
	</p>
<% else %>
	No students to show!
<% end %>

