
<% admin? do %>
	<%= link_to "Add students", new_student_path %>
<% end %>

<h4>
	Students on your team:
</h4>

<% if !@students.empty? %>
	<table>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Student ID</th>
			<th>Grade Level</th>
			<th>Gender</th>
			<th>Detention Count</th>
			<th>GPA</th>
		</tr>
		<% @students.each do |student| %>
			<tr>
				<td><%= link_to student.first, student_path(student) %></td>
				<td><%= student.last %></td>
				<td><%= student.student_id %></td>
				<td><%= student.grade_level %></td>
				<td><%= student.gender %></td>
				<td><%= student.detention_count %></td>
				<td><%= student.gpa %></td>
			</tr>
		<% end %>
	</table>
<% else %>
	You have no students on your team.
<% end %>

