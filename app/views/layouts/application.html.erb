<!DOCTYPE html>
<html>
<head>
  <title>Gary Comer Teams</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<body>

<div class="logo">
	<%= image_tag "GCCP_logo.png" %>
</div>


<% logged_in? do %>
	<div class="jumbotron">
		<span class="jumbotron_text">
			Welcome, <%= link_to "#{User.find_by(id: session[:user_id]).name}", user_path(User.find_by(id: session[:user_id])) %>!
		</span>
	</div>

	<%= link_to "Logout", controller: "sessions", action: "logout" %>
	<br>
	<%= link_to "View all students", students_path %>
	<br>
	<%= link_to "View all advisors", users_path %>
	<br>
	<%= link_to "Edit your profile", edit_user_path(session[:user_id]) %>
	<br>
	The rules are: <% @rules.content.split("&&&").each do |rule| %>
		<%= rule %><br>
	<% end %>
<% end %>

<% admin? do %>
	<br><%= link_to "Add students", new_student_path %>
	<br><%= link_to "Edit teacher code", controller: "secrets", action: "edit_code" %>
	<br><%= link_to "Edit rules", controller: "secrets", action: "edit_rules" %>
<% end %>

<%= yield %>

</body>
</html>
