<!DOCTYPE html>
<html>
<head>
  <title>Gary Comer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% logged_in? do %>
	<h3>
		Welcome, <%= link_to "#{User.find_by(id: session[:user_id]).name}", user_path(User.find_by(id: session[:user_id])) %>!
	</h3>

	<%= link_to "Logout", controller: "sessions", action: "logout" %>
	<br>
	<%= link_to "View all students", students_path %>
	<br>
	<%= link_to "View all advisors", users_path %>
	<br>
	<%= link_to "Edit your profile", edit_user_path(session[:user_id]) %>
	<br>
	The rules are: <% @rules.content.split("&&&").each do |rule| %>
		<%= rule %><br>
	<% end %>
<% end %>

<% admin? do %>
	<br><%= link_to "Add students", new_student_path %>
	<br><%= link_to "Edit teacher code", controller: "secrets", action: "edit_code" %>
	<br><%= link_to "Edit rules", controller: "secrets", action: "edit_rules" %>
<% end %>

<%= yield %>

</body>
</html>
